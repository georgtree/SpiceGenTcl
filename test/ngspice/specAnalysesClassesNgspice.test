###  Dc class tests 
    
test testDcClass-1 {test Dc class} -setup {
    set res [Dc new -src v1 -start {time1 -eq} -stop 5 -incr 0.1 -name dc1]
} -body {
    set result [$res genSPICEString]
} -result {.dc v1 {time1} 5 0.1} -cleanup {
    unset res result
}

